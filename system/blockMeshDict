(
    // Inlet section vertices (0-7)
    (0    0    0)      // 0
    (2    0    0)      // 1
    (2    0.5  0)      // 2
    (0    0.5  0)      // 3
    (0    0    0.409)  // 4
    (2    0    0.409)  // 5
    (2    0.5  0.409)  // 6
    (0    0.5  0.409)  // 7

    // Middle section vertices (8-11)
    (3    0    0)      // 8
    (3    0.5  0)      // 9
    (3    0    0.409)  // 10
    (3    0.5  0.409)  // 11

    // Outlet section vertices (12-15)
    (5    0    0)      // 12
    (5    0.5  0)      // 13
    (5    0    0.409)  // 14
    (5    0.5  0.409)  // 15

    // Ballast vertices (16-23)
    (2.2  0.05  0)     // 16
    (2.8  0.05  0)     // 17
    (2.8  0.20  0)     // 18
    (2.2  0.20  0)     // 19
    (2.2  0.05  0.409) // 20
    (2.8  0.05  0.409) // 21
    (2.8  0.20  0.409) // 22
    (2.2  0.20  0.409) // 23
);

blocks
(
    // Inlet section
    hex (0 1 2 3 4 5 6 7) (200 50 1) simpleGrading (1 1 1)

    // Middle section (with ballast)
    hex (1 8 9 2 5 10 11 6) (100 50 1) simpleGrading (1 1 1)

    // Outlet section
    hex (8 12 13 9 10 14 15 11) (200 50 1) simpleGrading (1 1 1)

    // Ballast block
    hex (16 17 18 19 20 21 22 23) (60 15 1) simpleGrading (1 1 1)
);

edges
(
);

patches
(
    patch inlet
    (
        (0 4 7 3)
    )

    patch outlet
    (
        (12 14 15 13)
    )

    patch atmosphere
    (
        (3 7 6 2)
        (2 6 11 9)
        (9 11 15 13)
    )

    wall walls
    (
        // Bottom walls
        (0 1 5 4)
        (1 8 10 5)
        (8 12 14 10)
        
        // Front walls (y=0)
        (0 3 2 1)
        (1 2 9 8)
        (8 9 13 12)
        
        // Back walls (y=0.409)
        (4 5 6 7)
        (5 10 11 6)
        (10 14 15 11)
    )

    wall ballast
    (
        (16 17 21 20)  // front
        (17 18 22 21)  // right
        (18 19 23 22)  // top
        (19 16 20 23)  // left
    )
);

mergePatchPairs
